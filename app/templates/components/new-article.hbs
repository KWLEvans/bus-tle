<h3>Add a new article</h3>
<form>
  <div class="form-group">
    <label for="headline">Headline:</label>
    {{input value=headline id="headline" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="image">Image URL:</label>
    {{input value=image id="image" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="content">Article body:</label>
    {{textarea value=content id="content" class="form-control" rows="10"}}
  </div>

  <button {{action 'saveArticle'}}>Save</button>
</form>
